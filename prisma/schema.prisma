generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  password  String
  name      String
  role      String     @default("USER")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("users")
}

model Checklist {
  id        String     @id @default(cuid())
  slug      String     @unique
  title     String
  version   String
  category  String
  itemCount Int        @default(0)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  items ChecklistItem[]
  assessments Assessment[]

  @@map("checklists")
}

model ChecklistItem {
  id          String     @id @default(cuid())
  checklistId String
  code        String
  title       String
  description String?
  severity    String     @default("MEDIUM")
  cweId       String?
  bodyMd      String?
  references  String?
  tools       String?
  category    String
  sort        Int        @default(0)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  checklist Checklist @relation(fields: [checklistId], references: [id], onDelete: Cascade)
  assessmentItems AssessmentItem[]

  @@unique([checklistId, code])
  @@map("checklist_items")
}

model Project {
  id          String     @id @default(cuid())
  name        String
  description String?
  scope       String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  assessments Assessment[]

  @@map("projects")
}

model Assessment {
  id          String     @id @default(cuid())
  projectId   String
  checklistId String
  title       String
  status      String     @default("IN_PROGRESS")
  progress    Float      @default(0)
  notes       String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  startedAt   DateTime?
  completedAt DateTime?

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  checklist Checklist @relation(fields: [checklistId], references: [id], onDelete: Cascade)
  items AssessmentItem[]
  findings Finding[]

  @@map("assessments")
}

model AssessmentItem {
  id              String     @id @default(cuid())
  assessmentId    String
  itemId          String
  status          String     @default("PENDING")
  notes           String?
  evidence        String?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  assessment Assessment @relation(fields: [assessmentId], references: [id], onDelete: Cascade)
  item ChecklistItem @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@unique([assessmentId, itemId])
  @@map("assessment_items")
}

model Finding {
  id              String     @id @default(cuid())
  assessmentId    String
  itemId          String?
  title           String
  description     String
  severity        String     @default("MEDIUM")
  status          String     @default("OPEN")
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  assessment Assessment @relation(fields: [assessmentId], references: [id], onDelete: Cascade)
  evidence Evidence[]

  @@map("findings")
}

model Evidence {
  id        String     @id @default(cuid())
  findingId String
  fileName  String
  filePath  String
  fileSize  Int
  mimeType  String
  createdAt DateTime   @default(now())

  finding Finding @relation(fields: [findingId], references: [id], onDelete: Cascade)

  @@map("evidence")
}
